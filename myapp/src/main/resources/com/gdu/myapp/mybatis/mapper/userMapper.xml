<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gdu.myapp.mapper.UserMapper"> <!-- Interface 이름에 맞춤 -->

  <select id="getUserByMap"
          parameterType="Map"
          resultType="UserDto">
    SELECT    USER_NO
            , EMAIL
            , PW, NAME
            , GENDER
            , MOBILE
            , EVENT_AGREE
            , SIGNUP_KIND
            , PW_MODIFY_AT
            , SIGNUP_DT
    FROM      USER_T    
      <where>
        <if test="email!=null">AND EMAIL = #{email}</if>
        <if test="pw!=null">AND PW = #{pw}</if>
      </where>            
            
  </select>
  
  <insert id="insertAccessHistory"
          parameterType="Map">
    INSERT INTO ACCESS_HISTORY_T (
              ACCESS_HISTORY_NO
            , EMAIL
            , IP
            , SIGNIN_DT
            , SIGNOUT_DT    
    ) VALUES (
        ACCESS_HISTORY_SEQ.NEXTVAL
      , #{email}
      , #{ip}
      , CURRENT_DATE
      , NULL    
    )
  </insert>
  
  <select id="getLeaveUserByMap"
          parameterType="Map"
          resultType="LeaveUserDto">
    SELECT  LEAVE_USER_NO
    FROM    LEAVE_USER_T
    <where>
      <if test="email!=null">EMAIL = #{email}</if>
    </where>        
  </select>
          
  
  
  
  <insert id="insertUser"
          parameterType="UserDto">
  </insert>
  
  
  
  
  

</mapper>